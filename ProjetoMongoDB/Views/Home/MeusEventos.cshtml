@model IEnumerable<ProjetoMongoDB.Models.Evento>

@{
    ViewData["Title"] = "Meus Eventos";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<h2>Eventos Inscritos</h2>
<hr />

<div class="row">
    @foreach (var evento in Model)
    {
        DateOnly dataEvento = evento.Data;
        DateOnly hoje = DateOnly.FromDateTime(DateTime.Now);

        @if(dataEvento > hoje)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@evento.Nome</h5>
                        <p class="card-text">@evento.Descricao</p>
                        <p class="card-text">
                            <small class="text-muted">Data: @evento.Data</small><br />
                            <small class="text-muted">Horário: @evento.HorarioInicio.ToString(@"hh\hmm") às @evento.HorarioFim.ToString(@"hh\hmm")</small>
                        </p>
                    </div>

                    <div class="card-footer">
                        <form asp-controller="Evento" asp-action="Cancelar" asp-route-id="@evento.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Cancelar</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>
