@model SistemaAcademico.Models.Aluno

@{
    ViewData["Title"] = "Create";
}

<h1>Crie um aluno</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ra" class="control-label"></label>
                <input asp-for="Ra" class="form-control" />
                <span asp-validation-for="Ra" class="text-danger"></span><br />
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group"><br />
                <input type="submit" value="Criar Novo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div><br />
    <a class="btn btn-warning" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
