@model IEnumerable<SistemaAcademico.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";
}

<h1>Lista de Usuários</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.UsuarioId">Editar</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.UsuarioId">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UsuarioId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
